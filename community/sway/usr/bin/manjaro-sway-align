#!/bin/bash
set -xu

echo "Install all the explicit regular dependencies for the sway iso"

curl -s https://raw.githubusercontent.com/Manjaro-Sway/iso-profiles/sway/community/sway/Packages-Desktop | grep "^[^#>]" | sudo pacman -S --noconfirm -

echo "Install all the explicit extra dependencies for the sway iso"
curl -s https://raw.githubusercontent.com/Manjaro-Sway/iso-profiles/sway/community/sway/Packages-Desktop | grep -oP '(?<=>extra )[^ ]*' | sudo pacman -S --noconfirm -
