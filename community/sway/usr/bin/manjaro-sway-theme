#!/bin/bash

## theme switcher for manjaro sway
THEME_DIR="/usr/share/sway/themes"

prompt() {
    read -p "->${1:+" ${1}."} Press enter to continue..."
}

THEMES=$(find ${THEME_DIR} -mindepth 1 -maxdepth 1 -type d -printf '%f\n' | sort)

THEME=$(echo "$THEMES" | rofi -dmenu -p "Select theme:")
THEME_DIR="${THEME_DIR}/${THEME}"

# shellcheck disable=SC2046
if ! pacman -Qi $(cat "$THEME_DIR/packages") >/dev/null; then
    # shellcheck disable=SC2046
    [ -f  "$THEME_DIR/packages" ] && echo "> Installing theme requirements using yay" && foot --app-id floating_shell --window-size-chars 82x25 yay -S --needed $(cat "$THEME_DIR/packages")
fi

# copy the sway theme
[ -f  "$THEME_DIR/theme.conf" ] && echo "> Copying the sway theme" && /usr/bin/cp -v --backup "$THEME_DIR/theme.conf" "$HOME/.config/sway/definitions.d/"

# copy the foot theme
[ -f  "$THEME_DIR/foot.ini" ] && echo "> Copying the foot theme" && echo && /usr/bin/cp -v --backup "$THEME_DIR/foot.ini" "$HOME/.config/foot/" 

echo "> Reloading sway" && swaymsg reload