#!/bin/sh

url='https://paste.c-net.org/'
domain=$(echo $url | awk -F/ '{print $3}')

if [ "$1" == "-h" ] || [ "$1" == "--help" ]; then
  echo "${domain} - Terminal pastebin"
  echo "Usage: echo "test" | $(basename $0)"
  exit 1
fi


if (( $# > 0 )); then
    for file; do
        curl -s \
            --data-binary @"$file" \
            --header "X-FileName: ${file##*/}" \
            "$url"
    done
else
    curl -s --data-binary @- "$url"
fi
